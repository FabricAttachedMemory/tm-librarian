#!/bin/sh

set -e
set -u

rm -rf /usr/lib/python3/dist-packages/tm_librarian/__pycache__
rm -rf /usr/lib/python3/dist-packages/tm_librarian/tests/__pycache__

for UNIT in tm-lfs tm-librarian tm-lmp; do
    for ACTION in stop disable; do
	deb-systemd-invoke $ACTION $UNIT || echo "Couldn't $ACTION $UNIT"
    done
done
systemctl daemon-reload || echo "systemd daemon reload failed"

#DEBHELPER#

exit 0
